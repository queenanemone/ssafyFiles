package recursive;

public class Recursive10 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println(recursive(1));
	}
	
	//idx : 순서값
	//return : sum
	private static int recursive(int idx)
	{
		//basis part
		if (idx > 10)
		{
			//11번째 반복
			return 1;
		}
		
		//inductive part
		return idx + recursive(idx + 1);
	}

}
